<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/elseb7a_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="#9EFFFFFF"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

<TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/title_item_elsebha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/font2"
        android:gravity="center_horizontal"
        android:text="سُبْحَانَ اللَّهِ"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/font1"
        android:text="عددمرات التكرار 100"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"/>
 <RelativeLayout

     android:layout_width="130dp"
     android:layout_height="130dp"
     android:layout_gravity="center_horizontal"
     android:layout_marginBottom="10dp"
     android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView_item"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:lottie_rawRes="@raw/counter2"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            />

        <TextView
            android:id="@+id/c_text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="80dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:fontFamily="@font/font1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
 </RelativeLayout>

</LinearLayout>


</androidx.cardview.widget.CardView>

